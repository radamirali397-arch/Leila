    result.innerHTML = "Ø§Ø´ØªØ¨Ø§Ù‡ Ø´Ø¯! Ù¾Ø§Ø³Ø® Ø¯Ø±Ø³Øª: "+quiz[current].a;
    btn.style.background="red";
  }
  setTimeout(()=>{
    current++;
    if(current<quiz.length){
      loadQuestion();
      result.innerHTML="";
    } else {
      document.getElementById("quiz-container").innerHTML = "<h2>Ø¢Ø²Ù…ÙˆÙ† ØªÙ…Ø§Ù… Ø´Ø¯!</h2><p>Ù†Ù…Ø±Ù‡ Ú©Ù„: "+score+"</p><button onclick='location.reload()'>ØªÙ„Ø§Ø´ Ø¯ÙˆØ¨Ø§Ø±Ù‡</button>";
